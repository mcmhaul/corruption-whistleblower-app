<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/Smooch_accent</item>
        <item name="android:colorPrimaryDark">@color/Smooch_accentDark</item>
        <item name="android:colorAccent">@color/Smooch_accentDarker</item>
        <item name="android:colorBackground">@color/fui_bgTwitter</item>
        <item name="android:textColorPrimary">@color/Smooch_btnActionButton</item>
        <item name="android:textColorPrimaryInverse">@color/Smooch_btnActionButton</item>
        <item name="homeAsUpIndicator">@drawable/ic_back_arrow</item>
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">#f3f3f3</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#131313</item>
    </style>

    <style name="SamgStyledStrokeButton">
        <item name="android:background">@drawable/btn_rounded_stroke</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">38.7dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/Smooch_accentDarker</item>
    </style>

    <!--Toolbar-->
    <style name="CustomToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/Smooch_accentDarker</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SolidButton">
        <item name="android:background">@drawable/btn_rounded</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">38.7dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/Smooch_btnActionButton</item>
    </style>

    <style name="StyledTextInputLayoutTheme" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@color/textInput</item>
        <item name="android:textColor">@color/BasePressColor</item>
        <item name="android:textColorHint">@color/textInput</item>
        <item name="colorAccent">@color/BasePressColor</item>
        <item name="colorControlNormal">@color/textInput</item>
        <item name="colorControlActivated">@color/BasePressColor</item>
        <item name="colorControlHighlight">@color/BasePressColor</item>
    </style>

    <style name="StyledTextInputLayoutBlue" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyledTextInputEditTextBlue">
        <item name="android:textColor">@color/BaseReleaseColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyledTextInputLayoutBlueTheme" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@color/textInput</item>
        <item name="android:textColor">@color/textInput</item>
        <item name="colorAccent">@color/textInput</item>
        <item name="colorControlNormal">@color/textInput</item>
        <item name="colorControlActivated">@color/textInput</item>
        <item name="colorControlHighlight">@color/textInput</item>
    </style>
</resources>
