<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/coordinatorLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".reportActivity">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8.3dp"
                    android:drawableEnd="@drawable/ic_asterisk"
                    android:text="Describe Incident"
                    android:textColor="@color/BaseReleaseColor" />

                <EditText
                    android:id="@+id/incidenceReport"
                    style="@style/StyledTextInputEditTextBlue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/etxt_rounded"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="Type Here"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:padding="10dp" />


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/StyledTextInputLayoutBlue"
                    android:layout_marginBottom="16dp"
                    android:theme="@style/StyledTextInputLayoutBlueTheme">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/badgeNo"
                        style="@style/StyledTextInputEditTextBlue"
                        android:drawableEnd="@drawable/ic_asterisk"
                        android:hint="OFFICER/S BADGE NO."
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/StyledTextInputLayoutBlue"
                    android:layout_marginBottom="16dp"
                    android:theme="@style/StyledTextInputLayoutBlueTheme">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fullName"
                    style="@style/StyledTextInputEditTextBlue"
                    android:hint="Full Name"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/StyledTextInputLayoutBlue"
                    android:layout_marginBottom="16dp"
                    android:theme="@style/StyledTextInputLayoutBlueTheme">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailAddress"
                    android:hint="Email Address"
                    style="@style/StyledTextInputEditTextBlue"
                    android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/locationButton"
                    style="@style/SolidButton"
                    android:layout_width="130dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="8dp"
                    android:text="LOCATION"
                    android:visibility="gone"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/StyledTextInputLayoutBlue"
                    android:layout_marginBottom="16dp"
                    android:theme="@style/StyledTextInputLayoutBlueTheme">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/locationIncident"
                        style="@style/StyledTextInputEditTextBlue"
                        android:drawableEnd="@drawable/ic_asterisk"
                        android:hint="Enter location"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/buttonAttachImage"
                    style="@style/SamgStyledStrokeButton"
                    android:layout_width="130dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="8dp"
                    android:drawableEnd="@drawable/ic_asterisk"
                    android:text="@string/attach_image" />

                <TextView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/submitButton"
                    style="@style/SolidButton"
                    android:layout_width="142.3dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="8dp"
                    android:text="@string/submit" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>